<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5721B6">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayoutOfImagesOflumotionAndAskidaIyilikKayitOlId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lumotionLogoIdForKayitOl"
            android:src="@drawable/lumotion_logo"
            android:layout_gravity="center_vertical"
            android:layout_width="85dp"
            android:layout_height="85dp"/>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#000000"
            android:layout_width="2dp"
            android:layout_gravity="center_vertical"
            android:layout_height="83dp"/>
        <ImageView
            android:id="@+id/askidaIyilikLogoForKayitOl"
            android:src="@drawable/askida_iyilik_logo"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutId"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/linearLayoutOfImagesOflumotionAndAskidaIyilikKayitOlId"
        android:background="@drawable/login_and_register_viewpager_custom"
        app:tabIndicatorColor="#5721B6"
        app:tabSelectedTextColor="#5721B6" />

    <androidx.viewpager2.widget.ViewPager2
        android:background="@color/white"
        android:id="@+id/viewPagerId"
        android:layout_below="@id/tablayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>